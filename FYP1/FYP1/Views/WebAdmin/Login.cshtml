@model FYP1.Models.WebAdmin

@{
    Layout = "_EmptyLayout";
}

    <div class="container" >
        <div class="row mt-4">
            <div class="col-sm-4">

            </div>
            <div class="col-sm-5">
                <form asp-controller="WebAdmin" asp-action="Login" class="border p-5" method="post">
                    <h1 class="font-weight-bold ">Admin Login</h1>
                    <div class="form-group">
                        <label class="control-label" asp-for="AdminUserName">Username</label>
                        <input type="text" asp-for="AdminUserName" value="" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="password">Password</label>
                        <input type="password" asp-for="password" class="form-control" />
                    </div>
                    <input type="submit" class="btn btn-default" value="Login" />
                    <br />
                    <span class="text-danger">@ViewBag.message</span><br />
                    <span class="text-danger">@ViewBag.errorMsg</span><br />
                </form>
            </div>
        </div>
    </div>
    
