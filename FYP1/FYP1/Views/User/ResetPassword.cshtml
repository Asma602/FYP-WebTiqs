@{ 
    Layout = "_EmptyLayout";
}

@model FYP1.ViewModel.ResetPasswordViewModel
    <style>
        .formClass {
            background-color: #ffffff;
            padding: 20px;
            margin-top: 150px;
        }
    </style>


<div class="container-fluid mt-0" style="background-color:#79777a; height:100vh;">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            <form method="post" class="formClass">
                <h2>Reset Password</h2>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Token" type="hidden" />
                <input asp-for="Email" type="hidden" />
                <div class="form-group">
                    <label asp-for="Password">New Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn " style="background-color:#00b297;">Reset</button>
            </form>
        </div>
    </div>
</div>
