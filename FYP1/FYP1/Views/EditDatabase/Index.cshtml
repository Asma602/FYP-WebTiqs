<script>
    function deleteTable(id) {

        if (confirm("Are you sure you want to delete this table?")) {
            $.ajax({
                url: "/EditDatabase/deleteTableFromDB",
                type: "POST",
                data: {
                    tableName: $("#TAB" + id).val()
                },
                success: function (data) {

                    $("#slideBarPartialEdit").html(data);
                    location.relaod();
                },
                error: function (err) {
                    console.error();
                }
            });

        }
        else {
            return;
        }


    }
    //window.onbeforeunload = function() { return "Your unsaved work will be lost."; };

</script>
